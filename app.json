{
  "expo": {
    "name": "TagTrack",
    "slug": "tagtrack",
    "version": "1.0.0",
    "orientation": "portrait",
    "scheme": "tagtrack",
    "userInterfaceStyle": "light",
    "icon": "./assets/icon.png",
    "splash": {
      "image": "./assets/splash.png",
      "resizeMode": "contain",
      "backgroundColor": "#0D1B2A"
    },
    "assetBundlePatterns": ["**/*"],

    "ios": {
      "supportsTablet": true,
      "bundleIdentifier": "com.example.tagtrack"
      // iOS NFC reader-mode settings are handled by the plugin during prebuild;
      // no need for a custom "ios.nfc" block here.
    },

    "android": {
      "package": "com.example.tagtrack",
      "permissions": [
        "android.permission.NFC",
        "android.permission.CAMERA"
      ],
      "adaptiveIcon": {
        "foregroundImage": "./assets/adaptive-icon.png",
        "backgroundColor": "#0D1B2A"
      }
    },

    "plugins": [
      [
        "react-native-nfc-manager",
        {
          "nfcPermission": "Allow TagTrack to read NFC tags on your clothing."
        }
      ],
      "expo-localization",
      "expo-image-picker",
      [
        "sentry-expo",
        {
          "organization": "your-org",
          "project": "tagtrack",
          "debug": false
        }
      ],
      [
        "expo-build-properties",
        {
          "android": {
            "compileSdkVersion": 35,
            "targetSdkVersion": 35
          },
          "ios": {
            "deploymentTarget": "13.4"
          }
        }
      ]
    ],

    "extra": {
      "eas": {
        "projectId": "00000000-0000-0000-0000-000000000000"
      }
    }
  }
}
